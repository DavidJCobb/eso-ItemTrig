<GuiXml>
   <Controls>
      <Control name="ItemTrig_UITemplate_vScrollList" inherits="ZO_ScrollAreaBarBehavior" virtual="true">
         <OnInitialized>
            ItemTrig.UI.vScrollList.initialize(self)
         </OnInitialized>
         <!--
            The inheritance just handles scrollbar opacity on hover, 
            and our markup doesn't break compatibility with Zenimax 
            code. However, we may want to keep an eye on that in 
            case they change it.
         -->
         <Controls>
            <Scroll name="$(parent)Contents" mouseEnabled="true">
               <Anchor point="TOPLEFT" />
               <Anchor point="BOTTOMRIGHT" offsetX="-ZO_SCROLL_BAR_WIDTH" />
               <OnMouseWheel>
                  local tl = self:GetParent()
                  ItemTrig.UI.vScrollList.scrollBy(tl, -delta * tl.tlData.scrollStep)
               </OnMouseWheel>
            </Scroll>
            <Slider name="$(parent)ScrollBar" mouseEnabled="true" inherits="ZO_VerticalScrollbarBase">
               <Anchor point="TOPLEFT"    relativeTo="$(parent)Contents" relativePoint="TOPRIGHT"    offsetY="16" />
               <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Contents" relativePoint="BOTTOMRIGHT" offsetY="-16" />
               <OnMouseWheel>
                  local tl = self:GetParent()
                  ItemTrig.UI.vScrollList.scrollBy(tl, -delta * tl.tlData.scrollStep)
               </OnMouseWheel>
               <OnValueChanged>
                  --ItemTrig.UI.vScrollList.scrollTo(self:GetParent(), value, true)
                  local tl = self:GetParent()
                  tl.tlData.scrollTop = value
                  ItemTrig.UI.vScrollList.repositionItems(tl)
               </OnValueChanged>
            </Slider>
         </Controls>
      </Control>
   </Controls>
</GuiXml>
