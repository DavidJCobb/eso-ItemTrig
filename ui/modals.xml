<GuiXml>
   <Controls>
      <Control name="ItemTrig_UITemplate_WModalHost" virtual="true">
         <Controls>
            <Texture name="$(parent)ModalUnderlay"
               color="000000" alpha=".55" excludeFromResizeToFitExtents="true"
               tier="MEDIUM" level="1"
               mouseEnabled="true"
               hidden="true"
            >
               <AnchorFill />
               <OnMouseWheel />
               <OnInitialized>
                  ItemTrig.UI.WModalHost:install(self:GetParent(), self)
               </OnInitialized>
            </Texture>
         </Controls>
      </Control>
   </Controls>
</GuiXml>