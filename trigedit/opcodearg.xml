<GuiXml>
   <Controls>
      <TopLevelControl name="ItemTrig_OpcodeArgEdit"
         mouseEnabled="true"
         movable="true"
         clampedToScreen="true"
         hidden="true"
      >
         <Dimensions x="300" y="150" />
         <Anchor point="CENTER" />
         <OnInitialized> ItemTrig.OpcodeArgEditWindow:OnInitialized(self) </OnInitialized>
         <Controls>
            <Backdrop name="$(parent)Bg" inherits="ZO_DefaultBackdrop" />
            <Control name="$(parent)Bottom" resizeToFitDescendents="true">
               <Anchor point="BOTTOMLEFT" />
               <Anchor point="BOTTOMRIGHT" />
               <Controls>
                  <Button inherits="ZO_DefaultButton" name="$(parent)OK" text="ITEMTRIG_STRING_UI_OPCODEARGEDIT_BUTTON_SAVE">
                     <Anchor point="BOTTOMRIGHT" />
                     <OnClicked> ItemTrig.OpcodeArgEditWindow:commit() </OnClicked>
                  </Button>
                  <Button inherits="ZO_DefaultButton" name="$(parent)Cancel" text="ITEMTRIG_STRING_UI_OPCODEARGEDIT_BUTTON_CANCEL">
                     <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)OK" relativePoint="BOTTOMLEFT" offsetX="-8" />
                     <OnClicked> ItemTrig.OpcodeArgEditWindow:cancel() </OnClicked>
                  </Button>
               </Controls>
            </Control>
            <Control name="$(parent)Body"
               inherits="ItemTrig_UITemplate_WViewHolder"
            >
               <Anchor point="TOPLEFT" />
               <Anchor point="BOTTOMRIGHT" offsetY="-5" relativeTo="$(parent)Bottom" relativePoint="TOPRIGHT" />
               <Controls>
                  <!-- START OF VIEWS -->
                  <Control name="$(parent)Enum"
                     inherits="ItemTrig_UITemplate_WViewHolderView"
                  >
                     <AnchorFill />
                     <Controls>
                        <Control name="$(parent)Value" inherits="ZO_ScrollableComboBox">
                           <Anchor point="TOPLEFT" />
                           <Anchor point="TOPRIGHT" />
                        </Control>
                     </Controls>
                  </Control>
                  <Control name="$(parent)Multiline"
                     inherits="ItemTrig_UITemplate_WViewHolderView"
                  >
                     <AnchorFill />
                     <Controls>
                        <EditBox name="$(parent)Value"
                           inherits="ZO_DefaultEditMultiLine"
                        >
                           <Anchor point="TOPLEFT" />
                           <Anchor point="BOTTOMRIGHT" />
                           <Controls>
                              <Backdrop name="$(parent)Bg" inherits="ZO_MultiLineEditBackdrop_Keyboard" />
                           </Controls>
                        </EditBox>
                     </Controls>
                  </Control>
                  <Control name="$(parent)Quantity"
                     inherits="ItemTrig_UITemplate_WViewHolderView"
                  >
                     <AnchorFill />
                     <Controls>
                        <EditBox name="$(parent)Number"
                           multiLine="false"
                           newLineEnabled="false"
                           textType="TEXT_TYPE_NUMERIC"
                        >
                           <Anchor point="TOPRIGHT" />
                           <Dimensions x="100" />
                        </EditBox>
                        <Control name="$(parent)Qualifier" inherits="ZO_ScrollableComboBox">
                           <Anchor point="TOPLEFT" />
                           <Anchor point="TOPRIGHT" relativeTo="$(parent)Number" relativePoint="TOPLEFT" offsetX="-5" />
                        </Control>
                     </Controls>
                  </Control>
                  <Control name="$(parent)String"
                     inherits="ItemTrig_UITemplate_WViewHolderView"
                  >
                     <AnchorFill />
                     <Controls>
                        <EditBox name="$(parent)Value"
                           multiLine="false"
                           newLineEnabled="false"
                           inherits="ZO_DefaultEdit"
                        >
                           <Anchor point="TOPLEFT" />
                           <Anchor point="TOPRIGHT" />
                           <Controls>
                              <Backdrop name="$(parent)Bg" inherits="ZO_SingleLineEditBackdrop_Keyboard" />
                           </Controls>
                        </EditBox>
                     </Controls>
                  </Control>
                  <!-- END OF VIEWS -->
               </Controls>
            </Control>
         </Controls>
      </TopLevelControl>
   </Controls>
</GuiXml>